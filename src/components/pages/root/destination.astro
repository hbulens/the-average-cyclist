---
const { destinations, title } = Astro.props;
---

<div class="flex-row items-center py-5">
    <div class="relative flex flex-col items-center md:flex-row" id="services">
        <p class="text-4xl sm:text-4 xl px-1 font-medium rounded-md mb-4">
            {title}
        </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-4">
        
        {destinations.map(({ background, name1, name2, arrow, link, image}): any => {
            const bgImage = `background-image: url('${image}');`;

            return (
            <div class={`${background} group relative overflow-hidden`} style={bgImage}>
                <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 ease-in-out group-hover:scale-110" style={bgImage}></div>
                <div class="relative z-10 flex-col justify-center items-start gap-[93px] inline-flex">
                    <div class="flex-col justify-start items-start flex">
                        <div class="px-[7px] bg-orange-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                            <div class="text-3xl font-medium">{name1}</div>
                        </div>
                        <div class="px-[7px] bg-orange-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                            <div class="text-3xl font-medium">{name2}</div>
                        </div>
                    </div>
                    <a class="justify-start items-center gap-[15px] inline-flex" href={link}>
                        <div class="w-[41px] h-[41px] relative transform transition-transform duration-300 ease-in-out group-hover:rotate-45 group-hover:animate-bounce-custom">
                            <img class="w-[41px] h-[41px] left-0 top-0 absolute" src={arrow} />
                        </div>
                        <div class="text-xl font-normal leading-7">Read more</div>
                    </a>
                </div>
            </div>
            );
        })}
    </div>
</div>
