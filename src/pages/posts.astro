---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";

const allPosts = await Astro.glob("../content/posts/*.md");
---

<Layout title="The Average Cyclist - Blog">
  <main class="space-y-20">
    <Container>
      <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <h2
            class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900"
          >
            Blog
          </h2>
          <p class="font-light text-gray-500 sm:text-xl">
            Posts on our cycling adventures.
          </p>
        </div>

        <div class="grid gap-8 lg:grid-cols-2">
          {
            allPosts.map(({ frontmatter }) => {
              const {
                type,
                publish_date,
                image: { url, alt },
                author,
                title,
                brief,
                id,
                tags,
              } = frontmatter;

              return (
                <article class="p-6 bg-white rounded-3xl border border-gray-200 shadow-card">
                  <div class="flex items-center mb-5 text-gray-500">
                    {tags.map((y: any) => (
                      <span class="bg-orange text-black text-xs font-medium inline-flex px-2.5 py-0.5 mx-0.5 rounded">
                        {y}
                      </span>
                    ))}
                    <span class="text-sm">{publish_date}</span>
                  </div>

                  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
                    {title}
                  </h2>
                  <p
                    class="mb-5 font-light text-gray-500"
                    style="white-space: pre-line"
                  >
                    {brief}
                  </p>
                  <div class="flex justify-between items-center">
                    <div class="flex items-center space-x-4">
                      <img
                        class="w-7 h-7 rounded-full"
                        src={
                          "https://www.dimescheduler.com/_next/image?url=%2F_next%2Fstatic%2Fmedia%2FHendrik%20Bulens.cbc1479e.jpg&w=1920&q=75"
                        }
                        alt={author + " cover"}
                      />
                      <span class="font-medium">{author}</span>
                    </div>
                    <a
                      href={`/the-average-cyclist/posts/${id}`}
                      class="inline-flex items-center font-medium text-black hover:text-orange"
                    >
                      Read more
                      <svg
                        class="ml-2 w-4 h-4"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                          clip-rule="evenodd"
                        />
                      </svg>
                    </a>
                  </div>
                </article>
              );
            })
          }
        </div>
      </div>
    </Container>
  </main>
</Layout>
